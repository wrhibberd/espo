---
import Logo from "./Logo.astro";

const pages = [
	{
		name: "Our Approach",
		href: "/approach",
	},
	{
		name: "About Us",
		href: "/about",
	},
	{
		name: "Services",
		href: "/services",
	},
	{
		name: "Contact",
		href: "/contact",
	},
];

const homepage = `${Astro.url.origin}/` === Astro.url.href;
---

<header
	class="fixed z-50 inset-x-0 top-0 flex justify-between align-top p-[2.5rem] w-full"
>
	<div
		id="headerOverlay"
		class="absolute inset-0 transition-opacity duration-1000 opacity-0 bg-gradient-to-b from-black to-transparent pointer-events-none"
	>
	</div>
	{
		homepage ? (
			<div class="shrink-0 relative">
				<Logo size="large" />
			</div>
		) : (
			<a
				href={Astro.url.origin}
				class="transition-opacity duration-300 hover:opacity-60 shrink-0 block relative"
			>
				<Logo size="large" />
			</a>
		)
	}
	<nav class="relative">
		<button
			id="mobileNavToggle"
			aria-label="toggle mobile menu"
			class="md:hidden">Menu</button
		>
		<ul class="gap-[1.5rem] hidden md:flex">
			{
				pages.map((page) => (
					<li>
						<a
							href={page.href}
							class:list={[
								Astro.url.pathname === page.href &&
									"border-b-2 border-current",
							]}
						>
							{page.name}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</header>

<nav
	id="mobileNav"
	class="fixed inset-0 bg-green z-40 flex-col justify-end p-[1.25rem] opacity-0 -translate-y-100 hidden"
>
	<ul class="gap-[1.5rem]">
		{
			pages.map((page) => (
				<li>
					<a
						href={page.href}
						class:list={[
							Astro.url.pathname === page.href &&
								"border-b-2 border-current",
						]}
					>
						{page.name}
					</a>
				</li>
			))
		}
	</ul>
</nav>

<script>
	import { timeline, stagger } from "motion";

	const headerFuncs = () => {
		const headerOverlay = document.querySelector("#headerOverlay");
		const mobileNav = document.querySelector("#mobileNav");
		const mobileNavButton = document.querySelector("#mobileNavToggle");
		let menuOpen = false;

		// define menu animations
		const menuTimeline = [
			[
				mobileNav,
				{
					display: ["none", "flex"],
					opacity: [0, 1],
					y: ["-100%", 0],
				},
				{
					duration: 0.3,
				},
			],
			[
				"#mobileNav li",
				{
					x: ["-100%", 0],
				},
				{
					delay: stagger(0.1),
				},
			],
		] as any;

		const menuTimelineReverse = [
			[
				"#mobileNav li",
				{
					x: [0, "-100%"],
				},
				{
					delay: stagger(0.1, { from: "last" }),
				},
			],
			[
				mobileNav,
				{
					display: ["flex", "none"],
					opacity: [1, 0],
					y: [0, "-100%"],
				},
				{
					duration: 0.3,
				},
			],
		] as any;

		// toggle header overlay
		function toggleOverlay() {
			if (!headerOverlay || menuOpen) {
				return;
			}
			if (window.scrollY > 120) {
				headerOverlay.classList.remove("opacity-0");
				headerOverlay.classList.add("opacity-100");
			} else {
				headerOverlay.classList.remove("opacity-100");
				headerOverlay.classList.add("opacity-0");
			}
		}

		// change mobile nav button text
		function changeMobileButtonText() {
			if (mobileNavButton) {
				mobileNavButton.innerHTML = menuOpen ? "Close" : "Menu";
			}
		}

		// animate menu
		function animateMenu() {
			if (!mobileNav || !headerOverlay) {
				return;
			}
			if (menuOpen) {
				document.body.style.overflow = "hidden";
				timeline(menuTimeline);
				if (window.scrollY > 120) {
					headerOverlay.classList.remove("opacity-100");
					headerOverlay.classList.add("opacity-0");
				}
			} else {
				document.body.style.overflow = "auto";
				timeline(menuTimelineReverse);
				if (window.scrollY > 120) {
					headerOverlay.classList.add("opacity-100");
					headerOverlay.classList.remove("opacity-0");
				}
			}
		}

		// add event listeners
		addEventListener("scroll", toggleOverlay);
		addEventListener("resize", () => {
			if (menuOpen && window.innerWidth > 768) {
				menuOpen = false;
				changeMobileButtonText();
				animateMenu();
			}
		});
		if (mobileNavButton) {
			mobileNavButton.addEventListener("click", () => {
				menuOpen = !menuOpen;
				changeMobileButtonText();
				animateMenu();
			});
		}
	};
	headerFuncs();
	document.addEventListener("astro:after-swap", headerFuncs);
</script>
